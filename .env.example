# OpenAI
OPENAI_API_KEY=PASTE_YOUR_KEY_HERE

# Modelle (Beispiele â€“ du kannst sie anpassen)
OPENAI_MODEL_CHAT=gpt-4.1-mini
OPENAI_MODEL_STT=gpt-4o-mini-transcribe
OPENAI_MODEL_TTS=gpt-4o-mini-tts
OPENAI_TTS_VOICE=alloy

# GPIO (BCM Nummern)
GPIO_PTT=17
GPIO_NEOPIXEL=18
NEOPIXEL_COUNT=1

# Optional: I2C OLED
USE_OLED=true

# Audio (optional)
# AUDIO_INPUT_DEVICE=
# AUDIO_OUTPUT_DEVICE=

# Features
USE_GPIO=true
USE_NEOPIXEL=false
GPIOZERO_PIN_FACTORY=lgpio

# Status LEDs (BCM)
GPIO_LED_RED=16
GPIO_LED_YELLOW=20
GPIO_LED_GREEN=21

# Push-to-talk Button (BCM)
GPIO_PTT=17

# Features
USE_GPIO=true

# OLED (I2C)
# Viele 0.91" Displays sind SH1106, auch wenn "SSD1306" draufsteht.
OLED_DRIVER=sh1106
OLED_I2C_BUS=1
OLED_I2C_ADDR=0x3C
OLED_WIDTH=128
OLED_HEIGHT=32
OLED_ROTATE=0

# OLED (I2C) - Default fuer dein 0.91" SH1106 (mit Safe-Area)
OLED_DRIVER=sh1106
OLED_I2C_BUS=1
OLED_I2C_ADDR=0x3C
OLED_WIDTH=128
OLED_HEIGHT=32

OLED_FONT_PATH=/usr/share/fonts/truetype/dejavu/DejaVuSans-Bold.ttf
OLED_FONT_SIZE=12
OLED_MARGIN_LEFT=4
OLED_MARGIN_TOP=3
OLED_MARGIN_RIGHT=4
OLED_MARGIN_BOTTOM=4
OLED_TEXT_DX=1
OLED_TEXT_DY=7
